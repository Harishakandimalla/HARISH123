#include <stdio.h>
#include <string.h>

int main() {
    char str[100], temp;
    int length;
    printf("Input the string: ");
    fgets(str, 100, stdin);
    length = strlen(str);
    for (int i = 0; i < length-1; i++) {
        for (int j = i+1; j < length-1; j++) {
            if (str[i] > str[j]) {
                temp = str[i];
                str[i] = str[j];
                str[j] = temp;
            }
        }
    }
    printf("The sorted string is: %s", str);
    return 0;
}
output:
Input the string: orange
The sorted string is: aegnor
